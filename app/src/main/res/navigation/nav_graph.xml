<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/homeFragment">
    <action
        android:id="@+id/action_addMedicinesFragment_to_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_homeFragment_to_addMedicinesFragment"
        app:destination="@id/addMedicinesFragment" />
    <action
        android:id="@+id/action_profileFragment_to_homeFragment"
        app:destination="@id/homeFragment" />
    <action
        android:id="@+id/action_global_profile"
        app:destination="@id/profileFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.medplus_pharmacy_pannel.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >

    </fragment>
    <fragment
        android:id="@+id/addMedicinesFragment"
        android:name="com.example.medplus_pharmacy_pannel.fragments.AddMedicinesFragment"
        android:label="Manage Medicines"
        tools:layout="@layout/fragment_manage_medicines" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.medplus_pharmacy_pannel.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>